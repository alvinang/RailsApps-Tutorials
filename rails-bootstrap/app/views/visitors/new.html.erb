<% content_for :title do %>Rails Bootstrap<% end %>
<% content_for :description do %>Rails Bootstrap Example<% end %>
<div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="item active">
      <img src="http://lorempixel.com/1170/800/city/9">
      <div class="carousel-caption text-center">
        <h3><%= Visitor::IMAGE_LABELS[0] %></h3>
      </div>
    </div>
    <div class="item">
      <img src="http://lorempixel.com/1170/800/city/7">
      <div class="carousel-caption text-center">
        <h3><%= Visitor::IMAGE_LABELS[1] %></h3>
      </div>
    </div>
    <div class="item">
      <img src="http://lorempixel.com/1170/800/city/6">
      <div class="carousel-caption text-center">
        <h3><%= Visitor::IMAGE_LABELS[2] %></h3>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="icon-prev"></span></a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="icon-next"></span></a>
</div>
<div class="text-center">
  <h4>Select a Favorite</h4>
  <div id="call-to-action">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" href="#modal-form">Choose!</button>
  </div>

  <div id="modal-form" class="modal fade" tabindex="-1" role ="dialog" style="display: <%= @visitor.errors.any? ? 'block' : 'none';%>">
    <div class="modal-dialog">
      <div class="modal-content">
        <%= simple_form_for @visitor do |f| %>
          <div class="modal-header">
            <a class="close" data-dismiss="modal">&#215;</a>
            <h3>Select a Favorite</h3>
          </div>
          <div class="modal-body">
            <%= f.error_notification %>
            <%= f.input :favorite, :collection => Visitor::IMAGE_LABELS, label: false, as: :radio_buttons, :item_wrapper_class => 'inline', styles: 'display: inline-block' %>
            <%= f.input :comment, label: false, :placeholder => 'Add a comment...' %>
          </div>
          <div class="modal-footer">
            <%= f.submit "Choose!", class: "btn btn-primary" %>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>